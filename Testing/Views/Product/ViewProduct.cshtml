@model Product

<!DOCTYPE html>

<html>
    <head>
        <title>@Model.Name Details Page</title>
    </head>
    <body>
        <div>
            <h3>@Model.Name Details:</h3>
            <table class="table">
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category ID</th>
                    <th>On Sale</th>
                    <th>Stock Level</th>
                </tr>
                <tr>
                    <td>@Model.ProductID</td>
                    <td>@Model.Name</td>
                    <td>@Model.Price</td>
                    <td>@Model.CategoryID</td>
                    <td>@Model.OnSale</td>
                    <td>@Model.StockLevel</td>
                </tr>
            </table>
            <div style="display: block">
                <a href="/Product/UpdateProduct/@Model.ProductID">Update this Product</a>
            </div>
        </div>
    </body>
</html>